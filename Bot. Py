import os
import telebot

BOT_TOKEN = os.getenv("BOT_TOKEN")
FORWARD_TO = os.getenv("FORWARD_TO")  # user_id to forward to

bot = telebot.TeleBot(BOT_TOKEN)

@bot.message_handler(func=lambda m: True)
def forward_all(message):
    try:
        bot.forward_message(FORWARD_TO, message.chat.id, message.message_id)
    except Exception as e:
        bot.send_message(FORWARD_TO, f"Error: {e}")

bot.infinity_polling()
